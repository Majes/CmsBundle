<div class="navbar-wrapper">
  <div class="container">

    <div class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Maje'Steel</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            {% for menu_page_id, menu_page in menu %}
            <li class="{% if menu_page.children is not null %}dropdown{% endif %}{% if menu_page.current %} active{% endif %}">
              {% if menu_page.children is not null %}<a href="#" class="dropdown-toggle" data-toggle="dropdown">
              {% else %}<a href="{% if menu_page.link_url is null %}{{ path('majes_cms_' ~ menu_page.id ~ '_' ~ lang) }}{% else %}{% endif %}"{% if menu_page.target_url is not null %}target="{{ menu_page.target_url }}"{% endif %}>{% endif %}{{ menu_page.label }}{% if menu_page.children is not null %} <b class="caret"></b>{% endif %}</a>

              {% if menu_page.children is not null %}
              <ul class="dropdown-menu">
                {% for children_id, children in menu_page.children %}<li{% if children.current %} class="active"{% endif %}><a href="{% if children.link_url is null %}{{ path('majes_cms_' ~ children.id ~ '_' ~ lang) }}{% else %}{% endif %}"{% if children.target_url is not null %}target="{{ children.target_url }}"{% endif %}>{{ children.label }}</a></li>{% endfor %}
              </ul>
              {% endif %}
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>
