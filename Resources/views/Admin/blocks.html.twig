{% extends 'MajesCoreBundle::layout.html.twig' %}

{% block title %}MajesCore - CMS{% endblock %}

{% block content_header '' %}

{% block content %}

<div class="container-fluid main-content">

  {{ include(
                'MajesCoreBundle:common:breadcrumbs.html.twig'
            ) }}
  
    <div class="page-title">
      <h1>{{ pageTitle }}</h1>
	  </div>

    <!-- DataTables Example -->
    <div class="row">
    	<div class="col-lg-12">
        	<div class="widget-container fluid-height clearfix">
            	<div class="heading">
              		<i class="icon-archive"></i>{{ pageSubTitle }}
              		<a href="{{ path('_cms_block_edit') }}" class="btn btn-success-outline pull-right"><i class="icon-plus"></i>Add new</a>
            	</div>
            	<div class="widget-content padded clearfix">
              		<table class="table table-bordered table-striped">
                		<thead>
                  			<th class="check-header hidden-xs"></th>
                        	<th class="">Title</th>
                  			<th></th>
                		</thead>
                		<tbody>
                  			<tr>
                    			<td class="check hidden-xs">
                      				<input name="optionsRadios1" type="checkbox" value="option1">
                    			</td>
                    			<td>Carousel</td>
                    			<td class="actions">
                    			  	<div class="action-buttons">
                    			  	 	<a href="#" class="table-actions"><i class="icon-pencil"></i></a>
                    			  	 	<a href="#" class="table-actions" onclick="return CoreAdmin.Common.confirmDelete('{% trans %}Are you sure you want to delete this block?{% endtrans %}')"><i class="icon-trash"></i></a>
                    			  	</div>
                    			</td>
                  			</tr>
                		</tbody>
              		</table>
            	</div>
          	</div>
    	</div>
    </div>
    <!-- end DataTables Example -->

</div>
{% endblock %}